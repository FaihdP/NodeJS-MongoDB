{{#if tasks}}
  <table class="table">
    <thead>
      <tr>
        <th>N.</th>
        <th>Title</th>
        <th>Description</th>
        <th>Operations</th>
      </tr>
    </thead>
    <tbody>
      {{#each tasks}}
        <tr>
          <td>{{@index}}</td>
          <td>{{title}}</td>
          <td>{{description}}</td>
          <td>
            {{#if done}}
              <a href="/toggleDone/{{_id}}"><button
                  class="btn btn-success"
                ><i class="fa-solid fa-square-xmark"></i></button></a>
            {{else}}
              <a href="/toggleDone/{{_id}}"><button
                  class="btn btn-success"
                ><i class="fa-sharp fa-solid fa-square-check"></i></button></a>
            {{/if}}

            <a href="/edit/{{_id}}"><button
                class="btn btn-primary"
              ><i class="fa-sharp fa-solid fa-pen-to-square"></i></button></a>

            <a href="/delete/{{_id}}"><button
                class="btn btn-danger"
              ><i class="fa-solid fa-trash-can"></i></button></a>

          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <div class="text-center">
    <h1>No tasks</h1>
    <img src="icons/empy.png" alt="empy" width="200">
  </div>
{{/if}}